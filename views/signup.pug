extends layout

block content
  form(
    action="/auth/signup"
    method="post"
  )
    div
      input(
        type="text"
        name="email"
        placeholder="email"
        required
      )
    div
      input(
        type="password"
        name="password"
        placeholder="password"
        required
      )
    div
      input(
        type="text"
        name="nickname"
        placeholder="nickname"
        required
      )
    div
      button(type="submit") Sign up
  if fail
    div(style="color: red;")=failMessage